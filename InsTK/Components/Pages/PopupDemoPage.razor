@page "/popup-demo"
@rendermode InteractiveServer

<h3>Popup Demo Page</h3>


<div class="modal @modalClass" tabindex="-1" role="dialog" style="display:@modalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick = "OnClickCloseModal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Document saved!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="OnClickCloseModal">Close</button>
            </div>
        </div>
    </div>
</div>
@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}
<button class="btn btn-primary" @onclick="OnClickShowModal">Show Modal</button>
@code {
    string modalClass = "";
    string modalDisplay = "none;";
    public bool ShowBackdrop = false;

    private void OnClickShowModal()
    {
        modalClass = "show";
        modalDisplay = "block;";
        ShowBackdrop = true;
    }
    private void OnClickCloseModal()
    {
        modalClass = "";
        modalDisplay = "none;";
        ShowBackdrop = false;
    }
}
